section.section.form
    .section__container
        form(action="#" method="POST")
            .form__row
                input(type="text" placeholder="Your name" name="userName" required).form__input
                input(type="email" placeholder="Email address" name="userEmail" required).form__input
                input(type="text" placeholder="Subject" name="userSubject" required).form__input
            textarea(name="userMessage" rows="9" max="255" spellcheck required).form__textarea
            input(type="submit" value="submit now").form__submit
